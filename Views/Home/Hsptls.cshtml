@model IEnumerable<MedBaseApp.Models.Hospital>

@{ if (User.Identity.IsAuthenticated == true)
    {
        Layout = "_LayoutVer2";
    }
    else
    {
        Layout = "_Layout";
    }
    ViewBag.Title = "All Hospitals";
}

<h3>All hospitals</h3>
<div class="album py-5 bg-light">
    <div class="container">

        <div class="row">
            <div class="col-md-4">
                <div class="card mb-4 box-shadow">
                    @foreach (var p in Model)
                    {

                        @if (p.HospitalImage != null)
                        {
                            <img class="card-img-top"   style='width:80px; height:60px;' src="data:image/jpeg;base64,@(Convert.ToBase64String(p.HospitalImage))" alt="Card image cap">

                        }
                            <div class="card-body">
                                <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>

                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <button type="button" class="btn btn-sm btn-outline-secondary">View</button>
                                        <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
                                    </div>
                                    <small class="text-muted">9 mins</small>
                                </div>


                            </div>
                    }
                    </div>
            </div>
           
        </div>
    </div>
</div>









