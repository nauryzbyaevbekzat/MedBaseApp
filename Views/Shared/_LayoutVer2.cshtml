<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MedBaseApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body >
    <div class="container">
        <header class="blog-header py-3" >
            <div class="row flex-nowrap justify-content-between align-items-center">
                <div class="col-4 pt-1">
                    <a class="text-muted" asp-area="" asp-controller="Home" asp-action="Profile">@ViewBag.UserName</a>
                </div>    
                <div>
                    <a class="blog-header-logo text-dark text-center" href="#">MedBase</a>
                </div>
                <div class="col-4 d-flex justify-content-end align-items-center">
                    <a class="text-muted" href="#">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mx-3"><circle cx="10.5" cy="10.5" r="7.5"></circle><line x1="21" y1="21" x2="15.8" y2="15.8"></line></svg>
                    </a>
                   

                </div>
            </div>
        </header>

        <div class="nav-scroller py-1 mb-2">
            <nav class="nav d-flex justify-content-between">
                <a class="p-2 text-muted" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
              
                <a class="p-2 text-muted" asp-area="" asp-controller="Home" asp-action="Hsptls">Hospitals</a>
                <a class="p-2 text-muted" asp-area="" asp-controller="Home" asp-action="Privacy">Doctors</a>
                <a class="p-2 text-muted" asp-area="" asp-controller="Home" asp-action="Privacy">Appointment to a doctor</a>
                <a class="p-2 text-muted" asp-area="" asp-controller="Home" asp-action="Profile">My profile</a>
                <a class="p-2 text-muted" asp-area="" asp-controller="Account" asp-action="Logout">Logout</a>

            </nav>
        </div>



    </div>
  

        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
        <footer class="border-top footer text-muted ">
            <div class="container text-dark text-center">
                &copy; 2021 - MedBaseApp <a href="#">Back to top</a>
            </div>
            
        </footer>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @RenderSection("Scripts", required: false)
</body>
</html>
